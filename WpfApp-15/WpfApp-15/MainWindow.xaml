<Window x:Class="WpfApp_15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="_Abrir" HorizontalAlignment="Left" Margin="149,149,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button Content="_Borrar" HorizontalAlignment="Left" Margin="244,151,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>
        <Button Content="_Cerrar" HorizontalAlignment="Left" Margin="360,149,0,0" VerticalAlignment="Top" Click="Button_Click_2"/>
        <Label Content="_Mensaje" HorizontalAlignment="Left" Margin="128,221,0,0" VerticalAlignment="Top" Target="{Binding ElementName=textBox, Mode=OneWay}"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="190,227,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
