<Window x:Class="APP_MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APP_MVVM"
        xmlns:viewmodel="clr-namespace:APP_MVVM.ViewModels"
        mc:Ignorable="d"
        Title="DEMO MVVM" Height="450" Width="800">
    <Window.Resources>
        <viewmodel:MainWindowViewModel x:Key="MainWindowViewModel"/>
    </Window.Resources>
    <Grid DataContext="{Binding Source={StaticResource MainWindowViewModel}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="3*"/> 
        </Grid.RowDefinitions>
        
        <Button Content="Clientes" Margin="10" Command="{Binding CustomerCommand}"/>
        <DataGrid Grid.Row="1" ItemsSource="{Binding Customers}" Margin="10"/>

    </Grid>
</Window>
