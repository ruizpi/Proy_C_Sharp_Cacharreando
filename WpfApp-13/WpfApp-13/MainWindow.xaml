<Window x:Name="EdTexto" x:Class="WpfApp_13.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_13"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="EdTexto1" ToolTip="Coloca tu mensaje" HorizontalAlignment="Left" Height="38" Margin="95,64,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="131"/>
        <Button x:Name="BtnMuestra" HorizontalAlignment="Left" Margin="110,141,0,0" VerticalAlignment="Top" Height="78" Width="185"
                ToolTipService.ShowDuration="1550"
                ToolTipService.HorizontalOffset="50"
                ToolTipService.VerticalOffset="20">
            <Button.ToolTip>
                <TextBlock FontFamily="Arial" FontSize="12" Foreground="Blue">
                    Al oprimir se mostrará un mensaje<LineBreak/>
                    Debe usarse cuando un textbox ya tenga algo de contenido           
                </TextBlock>

                
            </Button.ToolTip>
            Muestra
        </Button>

    </Grid>
</Window>
